<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001" author="anazarenko">
        <createTable tableName="users">
            <column name="login" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="auth_token" type="varchar(50)"/>
            <column name="role" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="tinyint(4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="login"
                       tableName="users"/>
    </changeSet>
</databaseChangeLog>